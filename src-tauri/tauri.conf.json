{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "剪贴板历史记录",
  "version": "1.0.8",
  "identifier": "com.tauri-app.clipboard",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "剪贴板历史记录",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "targets": ["nsis", "app", "dmg"]
  }
}
